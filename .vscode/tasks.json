{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start PHP Server (127.0.0.1:8080)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/start_server.ps1",
        "-Host", "127.0.0.1",
        "-Port", "8080"
      ],
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "php-server",
          "pattern": {
            "regexp": ".*",
            "file": 1,
            "line": 1,
            "column": 1,
            "message": 0
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*Starting PHP server.*",
            "endsPattern": ".*Development Server \\(http://.*\\) started.*"
          }
        }
      ]
    }
  ]
}
